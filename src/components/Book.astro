---
interface Props {
	index: string;
	title: string;
  img: string;
}

const { title, index, img } = Astro.props;



---


<li id="item" style=`--i:${index}; --urlimg: url("${img}");` onclick="">
  <a href="#" class="flex justify-between flex-col align h-full w-full items-center" ><span id="title">{title}</span><span id=`sign-${index}`>?</span></a>
</li>

<style>
  #title{
    writing-mode: vertical-lr;
    font-weight: bold;
  }
  #sign{
    font-weight: bold;
  }
</style>

<style>
  li{
    color: rgb(95, 95, 95);
    top: 0;
    width: 35px;
    background-color: #fff;
    padding: 15px;
    transition: all 0.5s;
    list-style: none;
    height: 160px;
    transform: translate(-20px, -20px);
    z-index: calc(1* var(--i));
    background: radial-gradient(circle, rgba(255,255,255,1) 0%, rgba(102,102,102,1) 100%);

    display: flex;
    justify-content: center;
    cursor: pointer;
  }
  li::before{
    transition: all 0.5s;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 4em;
    content: '?';
    position: absolute;
    top: 0;
    left: -100px;
    width: 101px;
    height: 100%;
    background-color: #fff;
    transform-origin: right;
    transform: skewY(45deg);
    background: radial-gradient(circle, rgba(255,255,255,1) 0%, rgba(102,102,102,1) 100%);
  }
  li::after{



    content: '';
    position: absolute;
    top: -100px;
    left: 0;
    width: 100%;
    height: 101px;
    background-color: #fff;
    transform-origin: bottom;
    transform: skewX(45deg);
    background: radial-gradient(circle, rgba(255,255,255,1) 0%, rgba(102,102,102,1) 100%);
  }

  li:hover{ 
    transform: translateZ(50px);
    background: var(--proyects);
    color: #fff;
  }

  li:hover::before{
    content: '';
    background: none;
    background-size: cover;
    background-image: var(--urlimg);
  }
  li:hover::after{
    background-size: cover;
    background-repeat: no-repeat;
    box-shadow: inset 0 -3px 0 3px var(--proyects); 
    background-image: url('/top.svg');
    background-color: #fff;
    
  }
</style>


